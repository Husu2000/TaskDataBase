@model List<GetAllProdutcViewModel>


<div class="col-sm-6 mb-3 mb-sm-0">
    @foreach(var item in Model)
    {
         <div class="card">
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text">@item.Description</p>
            <p class="card-text">@item.Price</p>
            <p class="card-text">@item.CategoryName</p>

            <a href="/Shop/DeleteProduct/@item.Id" class="btn btn-danger">DELETE</a>
            <a href="/Shop/UpdateProduct/@item.Id" class="btn btn-dark">UPDATE</a>
        </div>
    </div>
    }
   
</div>